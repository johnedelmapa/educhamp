<div class="container mt-4">
    <h2 class="text-center mb-3">Following</h2>
    <div class="row">
        <% @users.each do |user| %>
            <% @user = user %>
            <div class="col-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <%= image_tag avatar_url(@user), class: "rounded-circle avatar-feed" %>
                            </div>
                            <div class="col-7">
                                <h6><%= link_to @user.fullname, @user, class:"text-decoration-none" %></h6>
                                <span><%= @user.email %></span>
                            </div>
                            <div class="col-3">
                                <% if current_user != @user %>
                                    <div id="follow_form">
                                    <% if current_user.following?(@user) %>
                                        <%= render 'unfollow' %>
                                    <% else %>
                                        <%= render 'follow' %>
                                    <% end %>
                                    </div>
                                <% end %> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="pagination justify-content-center my-3">
        <%= will_paginate @users %>
    </div>
</div>